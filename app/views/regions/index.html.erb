<%- model_class = Region -%>

<div class="well">
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human(:count => 2).titleize %></h1>
    <%= link_to t('.new', :default => t("helpers.links.new")),
                url_for([:new, :region]),
                :class => 'btn btn-primary' %>
  </div>
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
    </thead>
    <tbody>
    <% @regions.each do |region| %>
        <tr>
          <td width="50%"><%= region.name %></td>
          <td><%= region.state %></td>
          <td>
            <%= link_to '<i class="icon mdi-content-create"></i>'.html_safe,
                        url_for([:edit, region]), :class => 'btn btn-default btn-icon' %>
            <%= link_to '<i class="icon mdi-content-remove-circle"></i>'.html_safe,
                        url_for(region),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-default btn-icon' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

    <div class="pull-right">
      <%= link_to t('.new', :default => t("helpers.links.new")),
                  url_for([:new, :region]),
                  :class => 'btn btn-primary' %>
    </div>
  <div class="clearfix"></div>
</div>