<% content_for :sidebar do %>
    <%- model_class = Region -%>
    <h3><%= t('general.region_info') %></h3>
    <dl class="dl-vertical">
      <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
      <dd><%= @region.state %></dd>
      <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
      <dd><%= @region.name %></dd>
    </dl>
    <%= link_to t('.edit', :default => t("helpers.links.edit")), url_for([:edit, @region]), :class => 'btn btn-xs btn-primary' %>

    <%= render :partial => 'regions/additional_info' %>


<% end %>