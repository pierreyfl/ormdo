<div class="well">
<%- model_class = Phone -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human(:count => 2).titleize %></h1>
  </div>
  <table class="table table-striped">
    <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:area) %></th>
      <th><%= model_class.human_attribute_name(:number) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
    </thead>
    <tbody>
    <% @phones.each do |phone| %>
        <tr>
          <td><%= phone.area %></td>
          <td><%= phone.number %></td>
          <td>
            <%= link_to '<i class="icon mdi-content-create"></i>'.html_safe,
                        edit_contact_phone_path(@resource, phone), :class => 'btn btn-default btn-icon' %>
            <%= link_to '<i class="icon mdi-content-remove-circle"></i>'.html_safe,
                        contact_phone_path(@resource, phone),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-icon btn-default' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_contact_phone_path(@resource),
              :class => 'btn btn-primary' %>

</div>


<% content_for :sidebar do %>
    <%= render 'contacts/sidebar' %>
<% end %>