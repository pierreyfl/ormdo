<%= form_for [@resource,@phone], :html => { :class => "form-horizontal phone" } do |f| %>

    <% if @phone.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@phone.errors.count, "error") %> prohibited this phone from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @phone.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :area, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :area, :class => 'form-control' %>
    </div>
    <%= error_span(@phone[:area]) %>
  </div>
  <div class="form-group">
    <%= f.label :number, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :number, :class => 'form-control' %>
    </div>
    <%= error_span(@phone[:number]) %>
  </div>

  <div class="form-group">
    <%= f.label :carrier, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.select :carrier, options_for_select(Phone.carrier_attributes_for_select, selected: @phone.carrier), {:include_blank => 'Selecione a operadora'} , class: "form-control" %>
    </div>
    <%= error_span(@phone[:description]) %>
  </div>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            contact_phones_path(@resource), :class => 'btn btn-default' %>

<% end %>
