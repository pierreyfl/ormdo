<div class="well">
  <%- model_class = User -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human(:count => 2).titleize %></h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:role) %></th>
        <th><%= model_class.human_attribute_name(:email) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.role %></td>
          <td><%= user.email %></td>
          <td>
            <%= link_to '<i class="icon mdi-content-create"></i>'.html_safe,
                        edit_user_path(user), :class => 'btn btn-default btn-icon' %>
            <%= link_to '<i class="icon mdi-content-remove-circle"></i>'.html_safe,
                        user_path(user),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-icon btn-default' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>